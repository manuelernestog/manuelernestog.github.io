---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Manuel Ernesto Garicia | Resources">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Resources</div>
  </div>
  <HorizontalCard
    title="Astro Modern Personal Website"
    img="https://github.com/manuelernestog/astro-modern-personal-website/raw/main/public/social_img.png"
    desc="Astro Modern Personal Website Template with Project Section, CV Section, Paginated Blog, RSS Feed, SEO Friendly, Visual themes and Responsive Desing."
    url="https://astro-modern-personal-website.netlify.app/"
    badge="FOSS"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Model Business Canvas Template"
    img="https://user-images.githubusercontent.com/53962116/234713824-8477c8d9-a29b-41d6-92ec-900592b53360.png"
    desc="Model Business Canvas Template for Obsidian App"
    url="/assets/Resources/Business Model Canvas.canvas"
    download="Model Business Canvas.canvas"
    badge="New"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Multi Steps Form Component for Bootstrap"
    img="https://pbs.twimg.com/media/Fb-73tPXoAA67S5?format=jpg&name=medium"
    desc="Easily create a multi-step form for bootstrap."
    url="https://manuelernestog.github.io/bootstrap-multi-steps-component/"
    badge="FOSS"
  />

  <div class="divider my-0"></div>
  <HorizontalCard
    title="Joplin Minimalist Light Theme"
    img="https://github.com/manuelernestog/joplin-minimalist-light-theme/raw/main/docs/theme.png?raw=true"
    desc="Minimalist Light theme for Joplin App"
    url="https://github.com/manuelernestog/joplin-minimalist-light-theme"
  />
</BaseLayout>
